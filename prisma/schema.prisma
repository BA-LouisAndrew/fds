datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum HTTPMethod {
 POST
 GET
 PUT
 DELETE
}

model ValidationRule {
  id                  String    @id @default(auto()) @map("_id") @db.ObjectId
  name                String    @unique
  skip                Boolean
  priority            Int
  endpoint            String
  method              String
  failScore           Float
  condition           Json
  retryStrategy       Json?
  requestUrlParameter Json?
  requestBody         Json?
  requestHeader       Json?
}

model Secret {
 key    String @id @default(auto()) @map("_id") @db.ObjectId
 value  String
}